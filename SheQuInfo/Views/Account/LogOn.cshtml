@model SheQuInfo.Web.Models.LogOnModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>登录社区信息化系统</title>
    <!-- Bootstrap core CSS -->
    @Html.Css("bootstrap/css/bootstrap.min", "signin")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
  <script src="@Url.Content("~/bootstrap-assets/js/html5shiv.js")"></script>
  <script src="@Url.Content("~/bootstrap-assets/js/respond.min.js")"></script>
<![endif]-->
</head>
<body>
    @Html.ValidationSummaryBootStrap(true, "登录遇到错误,请重新尝试!")
    @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-signin" }))
    {
        <div class="container">
            <h2 class="form-signin-heading">
                请登录</h2>
            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxBootStrap(m => m.UserName, new { placeholder = "用户名" })
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密码" })
            </div>
            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <p>
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    登录</button>
            </p>
        </div>
    }
    @Html.Js("jquery-1.8.2.min")
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</body>
</html>